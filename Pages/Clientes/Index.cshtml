@page
@model TrasladoSeguro.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Index Clientes";
}
<h1>Index clientes</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Clientes[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes[0].Idservicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes[0].PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clientes[0].Email)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clientes)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
            
                <td>@item.Servicio.Name</td>
            
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>