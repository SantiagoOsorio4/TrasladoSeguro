@page
@model TrasladoSeguro.Pages.Clientes.CreateModel
@{
    ViewData["Title"] = "Create";
}
<h1>Crear Cliente</h1>

<hr />

<div class="row">
    <div class="col-md-6">

        <form method="post">
            <div class="form-group">
                <label for="FirstName">First Name</label>
                <input asp-for="Clientes.FirstName" class="form-control" />
                <span asp-validation-for="Clientes.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LastName">Last Name</label>
                <input asp-for="Clientes.LastName" class="form-control" />
                <span asp-validation-for="Clientes.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <input asp-for="Clientes.Address" class="form-control" />
                <span asp-validation-for="Clientes.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PhoneNumber">Phone Number</label>
                <input asp-for="Clientes.PhoneNumber" class="form-control" />
                <span asp-validation-for="Clientes.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Email">Email</label>
                <input asp-for="Clientes.Email" class="form-control" />
                <span asp-validation-for="Clientes.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Fecha">Fecha</label>
                <input asp-for="Clientes.Fecha" class="form-control" />
                <span asp-validation-for="Clientes.Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ConductorId">Conductor</label>
                <select asp-for="Clientes.ConductorId" class="form-control" asp-items="@Model.ConductoresSelectList"></select>
                <span asp-validation-for="Clientes.ConductorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Idservicio">Servicio</label>
                <select asp-for="Clientes.Idservicio" class="form-control" asp-items="@Model.ServiciosSelectList"></select>
                <span asp-validation-for="Clientes.Idservicio" class="text-danger"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>