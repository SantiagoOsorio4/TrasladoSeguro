@page
@model TrasladoSeguro.Pages.Clientes.CreateModel
@{
    ViewData["Title"] = "Create";
}
<h1>Crear Cliente</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Clientes.FirstName">Nombre:</label>
                <input asp-for="Clientes.FirstName" class="form-control" />
                <span asp-validation-for="Clientes.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clientes.LastName">Apellido:</label>
                <input asp-for="Clientes.LastName" class="form-control" />
                <span asp-validation-for="Clientes.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clientes.Address">Dirección:</label>
                <input asp-for="Clientes.Address" class="form-control" />
                <span asp-validation-for="Clientes.Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clientes.PhoneNumber">Número de Teléfono:</label>
                <input asp-for="Clientes.PhoneNumber" class="form-control" />
                <span asp-validation-for="Clientes.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clientes.Email">Correo Electrónico:</label>
                <input asp-for="Clientes.Email" class="form-control" />
                <span asp-validation-for="Clientes.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Clientes.Idservicio">Servicio:</label>
                <select asp-for="Clientes.Idservicio" asp-items="@(new SelectList(Model.Servicios, "Idservicio", "Name"))" class="form-control">
                    <option value="">Selecciona uno de nuestros servicios</option>
                </select>
                <span asp-validation-for="Clientes.Idservicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </form>
    </div>
</div>