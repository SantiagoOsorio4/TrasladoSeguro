@page
@model TrasladoSeguro.Pages.Registrar.CreateModel
@{
    ViewData["Title"] = "Create";
}
<h1>Registrar Servicio y Conductor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4 class="mt-4">Servicio</h4>
            <div class="form-group">
                <label asp-for="NewServicio.Name" class="control-label"></label>
                <input asp-for="NewServicio.Name" class="form-control" />
                <span asp-validation-for="NewServicio.Name" class="text-danger"></span>
            </div>
            <h4 class="mt-4">Conductor</h4>
            <div class="form-group">
                <label asp-for="NewConductor.Nombre" class="control-label"></label>
                <input asp-for="NewConductor.Nombre" class="form-control" />
                <span asp-validation-for="NewConductor.Nombre" class="text-danger"></span>
            </div>
            <div class="mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
     </div>
 </div>

<div class="mt-3">
    <a asp-page="/Clientes/Index" class="btn btn-secondary">Volver a la lista de clientes</a>
</div>

